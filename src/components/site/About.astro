---
import type { Page as Props } from '~/types';

import Detail from '~/components/site/Detail.astro';

const { header, components = [], footer } = Astro.props;
---

<Detail header={{ ...header }} components={components} footer={{ ...footer }}>
  <slot name="title" slot="title" />
  <slot name="subtitle" slot="subtitle" />
  <slot name="image" slot="image" />
  <slot name="ctaTitle" slot="ctaTitle" />
  <slot name="ctaSubtitle" slot="ctaSubtitle" />

  <slot name="pre" slot="pre" />
  <slot />
  <slot name="post" slot="post" />
</Detail>
